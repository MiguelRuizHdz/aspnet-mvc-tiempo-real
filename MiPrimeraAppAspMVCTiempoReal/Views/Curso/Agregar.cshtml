
@{
    ViewBag.Title = "Agregar";
}

<h2>Agregar Curso <span id="spnEstado"></span></h2>


<div>
    <div class="mb-3">
        <label for="txtIdCodigo" class="form-label">Código</label>
        <input readonly disabled class="form-control" type="text" id="txtIdCodigo" placeholder="Código">
    </div>
    <div class="mb-3">
        <label for="txtNombreCurso" class="form-label">Nombre</label>
        <input class="form-control" type="text" id="txtNombreCurso" placeholder="Nombre">
    </div>
    <div class="mb-3">
        <label for="txtDescripcion" class="form-label">Descripción</label>
        <textarea class="form-control" placeholder="Descripción" id="txtDescripcion" rows="3"></textarea>
    </div>
    <div class="mb-3">
        <label for="cboCategoriaCurso">Seleccione Categoria Curso</label>
        <select id="cboCategoriaCurso" class="form-select" aria-label="Seleccione Categoria Curso">
        </select>
    </div>
</div>

<script src="~/js/generic.js"></script>
<script src="~/js/categoriacurso.js"></script>
<script src="~/js/agregarcurso.js"></script>